{
  "author": "Kaiban Board Contributors",
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kaiban.showBoard",
        "icon": "$(kanban)",
        "title": "Kaiban: Show Markdown Board"
      },
      {
        "command": "kaiban.refreshBoard",
        "icon": "$(refresh)",
        "title": "Kaiban: Refresh Board"
      },
      {
        "command": "kaiban.configureProviders",
        "icon": "$(settings-gear)",
        "title": "Kaiban: Configure AI Providers"
      },
      {
        "command": "kaiban.setApiKey",
        "icon": "$(key)",
        "title": "Kaiban: Set API Key"
      },
      {
        "command": "kaiban.clearApiKey",
        "icon": "$(trash)",
        "title": "Kaiban: Clear API Key"
      },
      {
        "command": "kaiban.configurePRDPath",
        "icon": "$(folder)",
        "title": "Kaiban: Configure PRD Base Path"
      },
      {
        "command": "kaiban.createPRD",
        "icon": "$(file-text)",
        "title": "Kaiban: Create PRD"
      },
      {
        "command": "kaiban.createTask",
        "icon": "$(tasklist)",
        "title": "Kaiban: Create Task"
      }
    ],
    "configuration": {
      "properties": {
        "kaiban.ai.defaultModel": {
          "default": "",
          "description": "Default model (provider-specific, leave empty for provider default)",
          "type": "string"
        },
        "kaiban.ai.defaultProvider": {
          "default": "openrouter",
          "description": "Default AI provider for tasks",
          "enum": [
            "cursor",
            "openai",
            "openrouter",
            "replicate"
          ],
          "type": "string"
        },
        "kaiban.ai.streamResponses": {
          "default": true,
          "description": "Stream AI responses in real-time (when supported)",
          "type": "boolean"
        },
        "kaiban.columns.enabled": {
          "default": [
            "To Do",
            "Doing",
            "Testing",
            "Done"
          ],
          "description": "List of column names to display on the Kanban board. Valid values: 'Backlog', 'To Do', 'Doing', 'Testing', 'Done', 'Blocked'.",
          "items": {
            "enum": [
              "Backlog",
              "To Do",
              "Doing",
              "Testing",
              "Done",
              "Blocked"
            ],
            "type": "string"
          },
          "type": "array"
        },
        "kaiban.cursor.autoCreatePr": {
          "default": true,
          "description": "Automatically create PR when Cursor agent completes",
          "type": "boolean"
        },
        "kaiban.cursor.repositoryUrl": {
          "default": "",
          "description": "GitHub repository URL for Cursor Cloud Agent",
          "type": "string"
        },
        "kaiban.prd.basePath": {
          "default": ".agent/PRDS",
          "description": "Base path for PRD (Product Requirements Document) files. PRD paths in task files will be resolved relative to this path.",
          "type": "string"
        },
        "kaiban.ralph.command": {
          "default": "/ralph-loop:ralph-loop",
          "description": "Ralph command to execute. Can be a Claude Code plugin command (e.g., /ralph-loop:ralph-loop) or a bash script path (e.g., bash /path/to/ralph-loop.sh)",
          "type": "string"
        },
        "kaiban.ralph.maxIterations": {
          "default": 5,
          "description": "Maximum iterations for ralph-loop command",
          "type": "number"
        },
        "kaiban.ralph.completionPromise": {
          "default": "",
          "description": "Completion promise template for ralph-loop. If empty, will use task description as completion signal.",
          "type": "string"
        },
        "kaiban.claude.executablePath": {
          "default": "claude",
          "description": "Path to Claude CLI executable",
          "type": "string"
        },
        "kaiban.claude.additionalFlags": {
          "default": "",
          "description": "Additional flags to pass to Claude CLI (e.g., --dangerously-skip-permissions)",
          "type": "string"
        },
        "kaiban.claude.useRalphLoop": {
          "default": false,
          "description": "Use /ralph-loop plugin if available. When false, runs Claude directly with the task.",
          "type": "boolean"
        },
        "kaiban.claude.promptTemplate": {
          "default": "Read the task file at {taskFile} and implement it. The task contains a link to the PRD with full requirements. Update the task status to Done when complete.",
          "description": "Prompt template for Claude execution. Use {taskFile} for the task file path.",
          "type": "string"
        },
        "kaiban.skills.useAgentFolderInit": {
          "default": false,
          "description": "Use agent-folder-init Claude plugin to scaffold .agent/ folder (requires plugin installed via Claude CLI)",
          "type": "boolean"
        },
        "kaiban.skills.useTaskPrdCreator": {
          "default": false,
          "description": "Use task-prd-creator Claude plugin when creating tasks (requires plugin installed via Claude CLI)",
          "type": "boolean"
        },
        "kaiban.skills.useSessionDocumenter": {
          "default": false,
          "description": "Prompt to document session after task completion using session-documenter Claude plugin",
          "type": "boolean"
        }
      },
      "title": "Kaiban Board"
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "$(checklist)",
          "id": "kaibanboard",
          "title": "Kaiban Board"
        }
      ]
    }
  },
  "dependencies": {
    "lucide": "0.562.0"
  },
  "description": "AI-powered Kanban board for markdown tasks from .agent/TASKS/",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "25.0.3",
    "@types/vscode": "1.105.0",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "@vscode/vsce": "3.7.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "displayName": "Kaiban Board",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "keywords": [
    "kanban",
    "markdown",
    "task-management",
    "ai",
    "productivity",
    "agent",
    "vscode-extension"
  ],
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "main": "./out/extension.js",
  "name": "kaibanboardcom",
  "publisher": "shipshitdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/shipshitdev/kaibanboard.com"
  },
  "scripts": {
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "compile": "tsc -p ./",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "package": "bun run compile && mkdir -p build && vsce package --no-dependencies --out build/",
    "pre:install": "bun update --latest --recursive && bun add -D @types/vscode@1.105.0",
    "prepare": "husky",
    "pretest": "bun run compile",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "version:major": "bunx npm version major --no-git-tag-version",
    "version:minor": "bunx npm version minor --no-git-tag-version",
    "version:patch": "bunx npm version patch --no-git-tag-version",
    "vscode:prepublish": "bun run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "0.2.0"
}
