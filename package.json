{
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kaiban.showBoard",
        "icon": "$(kanban)",
        "title": "Kaiban: Show Markdown Board"
      },
      {
        "command": "kaiban.refreshBoard",
        "icon": "$(refresh)",
        "title": "Kaiban: Refresh Board"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "$(checklist)",
          "id": "kaiban-markdown",
          "title": "Kaiban Markdown"
        }
      ]
    }
  },
  "description": "AI-powered Kanban board for markdown tasks from .agent/TASKS/",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "24.8.1",
    "@types/vscode": "1.99.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vscode/vsce": "3.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "displayName": "Kaiban Markdown",
  "engines": {
    "vscode": "^1.99.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "main": "./out/extension.js",
  "name": "kaiban-md",
  "publisher": "kaiban-md",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaiban-md/kaiban-md"
  },
  "scripts": {
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "compile": "tsc -p ./",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "package": "bun run compile && mkdir -p build && vsce package --no-dependencies --out build/",
    "pre:install": "bun update && bun install",
    "prepare": "husky",
    "pretest": "bun run compile",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "version:major": "npm version major --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "vscode:prepublish": "bun run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "0.1.1"
}
