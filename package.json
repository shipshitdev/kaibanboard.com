{
  "name": "kaibanboard-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Kaiban Board - Kanban for AI-assisted development",
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/vscode"
  ],
  "scripts": {
    "build": "bun run build:core && bun run build:cli && bun run build:vscode",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:vscode": "cd packages/vscode && bun run compile",
    "clean": "bun run clean:core && bun run clean:cli && bun run clean:vscode",
    "clean:core": "rm -rf packages/core/dist",
    "clean:cli": "rm -rf packages/cli/dist",
    "clean:vscode": "rm -rf packages/vscode/out",
    "check": "biome check packages/",
    "check:fix": "biome check --write packages/",
    "format": "biome format --write packages/",
    "format:check": "biome format packages/",
    "lint": "biome lint packages/",
    "lint:fix": "biome lint --write packages/",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "package:cli": "cd packages/cli && bun run build",
    "package:vscode": "cd packages/vscode && bun run package"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "sass": "^1.97.2",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "packages/**/*.tsx": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shipshitdev/kaibanboard.com"
  },
  "author": "Kaiban Board Contributors",
  "keywords": [
    "kanban",
    "markdown",
    "task-management",
    "ai",
    "productivity",
    "agent"
  ]
}
