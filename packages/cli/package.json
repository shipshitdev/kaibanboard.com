{
  "name": "@kaibanboard/cli",
  "version": "0.3.1",
  "description": "CLI for Kaiban Board - Interactive terminal kanban for AI-assisted development",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "kai": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --banner:js=\"#!/usr/bin/env node\" --external:fsevents --external:react-devtools-core",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@kaibanboard/core": "workspace:*",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "ink": "^5.1.0",
    "meow": "^13.2.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "22.15.29",
    "@types/react": "^18.3.18",
    "esbuild": "^0.27.2",
    "typescript": "5.9.3"
  },
  "keywords": [
    "kanban",
    "cli",
    "tui",
    "task-management",
    "ai",
    "claude",
    "terminal"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shipshitdev/kaibanboard.com",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=18"
  }
}
