{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "node",
      "vscode"
    ]
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/test/**"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
